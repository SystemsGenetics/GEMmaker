/*
==================
SRA2GEV Paramaters
==================

By: Stephen Ficklin, John Hadish, Tyler Biggs
*/


params {
  // The path (full or relative) to the list of SRAs.
  // This must be a file with one SRR number per line.
  sra_list_path = "${PWD}/examples/SRA_IDs.txt"

  // The path of a txt document containing search paths for local
  // samples specified by the user. These should be in fastq format.
  // There must be one path per line.
  local_samples_path = "/scidas/oryza_sativa/rice_PRJNA301554/Kamiak-GEM/SRR*/SRR*_{1,2}.fastq"

  // Parameters for the reference genome.
  ref {
    // The full file system path the directory containing the
    // genome reference files.
    path = "${PWD}/examples/reference"

    // The prefix (used by hisat2-build) for the genome reference files.
    prefix = 'GCA_002793175.1_ASM279317v1_genomic'
  }

  trimmomatic {
  // Rename the <ILLUNIACLIP_PATH> to be the path where
  // the trimmomatic clipping files are housed.
  clip_path = "$ILLUMINACLIP_PATH"

  // This is a parameter for he minimum length of your RNA-seq reads.
  // Change parameter based on dataset being used.
  MINLEN = "30"
  }
}

profiles {
  standard {
    process.executor = 'local'
  }
  kamiak {
    module = ["java", "nextflow", "trimmomatic"]
    process {
      executor = 'slurm'
      queue = 'ficklin'
      cpus = 1
      time = '16h'
      maxRetries = 1
      errorStrategy = 'retry'
    }
    executor {
      queueSize = 100
    }
  }
}
